<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx" buttonMode="true">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.supportClasses.SkinnableComponent")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			[Bindable]
			public var label:String;

			public function toggleState():void
			{
				on = !on;
			}

			public function set on(value:Boolean):void
			{
				if (value)
				{
					currentState = "normal";
				}
				else
				{
					currentState = "disabled";
				}
			}

			[Bindable]
			public function get on():Boolean
			{
				return currentState=="normal";
			}
		]]>
	</fx:Script>

	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	<s:HGroup>
		<s:Group includeIn="normal">
			<s:Path rotation="180" scaleX="-0.73277283" scaleY="0.69564819" x="1.5" y="10.8" data="M10.8 13.2 -1.3 13.25 4.75 2.75 10.8 13.2">
				<s:fill>
					<s:SolidColor/>
				</s:fill>
			</s:Path>
			<s:Path rotation="180" scaleX="-0.73277283" scaleY="0.69564819" x="1.5" y="10.8" data="M10.8 13.2 -1.3 13.25 4.75 2.75 10.8 13.2">
				<s:stroke>
					<s:SolidColorStroke weight="1"/>
				</s:stroke>
			</s:Path>
		</s:Group>
		<s:Group includeIn="disabled">
			<s:Path scaleX="0.73277283" scaleY="0.69564819" x="1.5" y="-0.3" data="M10.8 13.2 -1.3 13.25 4.75 2.75 10.8 13.2">
				<s:fill>
					<s:SolidColor/>
				</s:fill>
			</s:Path>
			<s:Path  scaleX="0.73277283" scaleY="0.69564819" x="1.5" y="-0.3" data="M10.8 13.2 -1.3 13.25 4.75 2.75 10.8 13.2">
				<s:stroke>
					<s:SolidColorStroke weight="1"/>
				</s:stroke>
			</s:Path>
		</s:Group>
		<s:Label text="{label}"/>
	</s:HGroup>


</s:Skin>
